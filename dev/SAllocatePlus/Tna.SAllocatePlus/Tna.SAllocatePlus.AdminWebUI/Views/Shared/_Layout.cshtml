<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Staff Allocate Plus</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/sass/bundles.css" rel="stylesheet" />
    <link href="~/Scripts/lib/angular/angular-csp.css" rel="stylesheet" />
    <link href="~/Scripts/lib/angular-bootstrap/ui-bootstrap-csp.css" rel="stylesheet" />
    <link href="~/Scripts/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("S Allocate +", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Staffs", "About", "Home")</li>
                    <li>@Html.ActionLink("Jobs", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/lib/angular/angular.min.js"></script>
    <script src="~/Scripts/lib/angular-route/angular-route.min.js"></script>
    <script src="~/Scripts/lib/angular-sanitize/angular-sanitize.min.js"></script>
    <script src="~/Scripts/lib/moment/min/moment.min.js"></script>
    <script src="~/Scripts/lib/pace/pace.min.js"></script>
    <script src="~/Scripts/lib/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    

    @RenderSection("scripts", required: false)
</body>
</html>
